@model List<Tradebox.Services.BreadcrumbItem>

@if (Model != null && Model.Any())
{
    <nav class="breadcrumb-nav" aria-label="Breadcrumb">
        <ol class="breadcrumb-list">
            <li class="breadcrumb-item">
                <a href="/" class="breadcrumb-link">Anasayfa</a>
            </li>
            @foreach (var item in Model)
            {
                <li class="breadcrumb-item @(item.IsActive ? "breadcrumb-item--active" : "")">
                    <span class="breadcrumb-separator" aria-hidden="true">/</span>
                    @if (item.IsActive)
                    {
                        <span class="breadcrumb-current" aria-current="page">@item.Title</span>
                    }
                    else
                    {
                        <a href="@item.Url" class="breadcrumb-link">@item.Title</a>
                    }
                </li>
            }
        </ol>
    </nav>
}

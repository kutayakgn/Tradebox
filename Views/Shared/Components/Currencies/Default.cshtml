@model Tradebox.Models.PageTypes.Currencies
@{
    var children = ViewBag.Children as List<Tradebox.Models.ViewModels.ComponentTreeNode>;
}

<div class="currencies-widget @Model.CssClass"
     data-base-currency="@Model.BaseCurrency"
     data-display-currencies="@Model.DisplayCurrencies"
     data-refresh-interval="@Model.RefreshInterval">

    @if (!string.IsNullOrWhiteSpace(Model.Title))
    {
        <h3 class="currencies-title">@Model.Title</h3>
    }

    <div class="currencies-content">
    </div>

    @if (children != null && children.Any())
    {
        <div class="currencies-children">
            @foreach (var child in children)
            {
                @await Html.PartialAsync("_ComponentTreeNode", child)
            }
        </div>
    }
</div>

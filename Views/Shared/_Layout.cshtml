@inject Tradebox.Services.ICommonsService CommonsService
@{
    var commons = await CommonsService.GetCommonsAsync();
    var header = commons.FirstOrDefault(c => c.ViewComponentName == "Header");
    var footer = commons.FirstOrDefault(c => c.ViewComponentName == "Footer");
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tradebox</title>

    @if (ViewData["MetaDescription"] != null)
    {
        <meta name="description" content="@ViewData["MetaDescription"]" />
    }

    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    @if (header != null)
    {
        @await Html.PartialAsync("_ComponentTreeNode", header)
    }

    <main>
        @RenderBody()
    </main>

    @if (footer != null)
    {
        @await Html.PartialAsync("_ComponentTreeNode", footer)
    }

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
